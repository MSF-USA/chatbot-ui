# Root EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# JavaScript/TypeScript specific settings
[*.{js,jsx,ts,tsx,mjs,cjs}]
ij_javascript_spaces_within_brackets = false
ij_typescript_spaces_within_brackets = false
ij_javascript_spaces_within_object_literal_braces = true
ij_typescript_spaces_within_object_literal_braces = true
ij_javascript_spaces_within_imports = true
ij_typescript_spaces_within_imports = true
ij_javascript_use_double_quotes = false
ij_typescript_use_double_quotes = false
ij_javascript_use_semicolon_after_statement = true
ij_typescript_use_semicolon_after_statement = true
ij_javascript_spaces_around_operators = true
ij_typescript_spaces_around_operators = true
ij_javascript_space_after_comma = true
ij_typescript_space_after_comma = true
ij_javascript_space_before_function_left_parenth = false
ij_typescript_space_before_function_left_parenth = false
ij_javascript_spaces_within_array_initializer_braces = false
ij_typescript_spaces_within_array_initializer_braces = false

# JSON files
[*.{json,jsonc}]
indent_size = 2
ij_json_space_after_colon = true
ij_json_space_after_comma = true
ij_json_spaces_within_brackets = false
ij_json_spaces_within_braces = true

# YAML files
[*.{yml,yaml}]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass,less}]
indent_size = 2
ij_css_space_after_colon = true
ij_css_space_before_opening_brace = true

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

# Package files
[{package.json,tsconfig.json,jsconfig.json,.prettierrc.json,.eslintrc.json}]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
end_of_line = lf

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf