# ============================================
# MSF AI Assistant - Environment Configuration
# ============================================

# --------------------------------------------
# Application Configuration
# --------------------------------------------
NEXT_PUBLIC_BUILD=local
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_EMAIL=ai@newyork.msf.org
NEXT_PUBLIC_FEEDBACK_EMAIL=ai.team@amsterdam.msf.org

# Default AI Settings
NEXT_PUBLIC_DEFAULT_SYSTEM_PROMPT=You are a helpful AI assistant for MSF staff.
NEXT_PUBLIC_DEFAULT_TEMPERATURE=0.5

# --------------------------------------------
# NextAuth Configuration
# --------------------------------------------
# Application URL (update for production)
NEXTAUTH_URL=http://localhost:3000

# Secret for session encryption (generate with: openssl rand -base64 32)
# NextAuth v5 uses AUTH_SECRET, but NEXTAUTH_SECRET is supported as fallback
NEXTAUTH_SECRET=your-secret-here
AUTH_SECRET=your-secret-here

# --------------------------------------------
# Azure AD Authentication
# --------------------------------------------
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id

# --------------------------------------------
# Azure OpenAI
# --------------------------------------------
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# --------------------------------------------
# Azure AI Foundry (Optional)
# --------------------------------------------
# Required for AI agent support
AZURE_AI_FOUNDRY_ENDPOINT=https://your-ai-foundry-endpoint.com

# --------------------------------------------
# Azure Speech Services (Optional)
# --------------------------------------------
# Required for text-to-speech functionality
AZURE_SPEECH_API_KEY=your-azure-speech-api-key
AZURE_SPEECH_REGION=eastus

# --------------------------------------------
# Azure Blob Storage (Optional)
# --------------------------------------------
# Required for file uploads and transcription
AZURE_BLOB_STORAGE_NAME=your-storage-account-name
AZURE_BLOB_STORAGE_KEY=your-storage-account-key
AZURE_BLOB_STORAGE_CONTAINER=messages
AZURE_BLOB_STORAGE_IMAGE_CONTAINER=images

# Regional storage for EU users (Optional)
AZURE_BLOB_STORAGE_NAME_EU=your-eu-storage-account-name
AZURE_BLOB_STORAGE_KEY_EU=your-eu-storage-account-key

# --------------------------------------------
# Whisper Transcription (Optional)
# --------------------------------------------
# Alternative to Azure Speech for transcription
WHISPER_API_KEY=your-openai-api-key
WHISPER_ENDPOINT=https://your-whisper-endpoint.com
WHISPER_DEPLOYMENT=whisper

# Fallback to OpenAI API
OPENAI_API_KEY=your-openai-api-key

# --------------------------------------------
# LaunchDarkly (Optional)
# --------------------------------------------
# Required for feature flag management
LAUNCHDARKLY_CLIENT_ID=your-launchdarkly-client-id

# --------------------------------------------
# Azure Monitor (Optional)
# --------------------------------------------
# Required for application monitoring and logging
AZURE_MONITOR_CONNECTION_STRING=your-monitor-connection-string
